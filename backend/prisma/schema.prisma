generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("mother")
  facilityName String?
  licenseNumber String?
  dueDate   DateTime?
  isVerified Boolean  @default(false)
  verificationToken String?
  createdAt DateTime @default(now())
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  author    String?
  createdAt DateTime @default(now())
}

model Chat {
  id        Int      @id @default(autoincrement())
  userId    Int?
  text      String
  createdAt DateTime @default(now())
}